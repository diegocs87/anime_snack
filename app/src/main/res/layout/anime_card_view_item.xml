<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvAnime"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="15dp"
    app:cardElevation="0dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:clipToPadding="false">

        <ImageView
            android:id="@+id/imgAnime"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="15dp"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:srcCompat="@tools:sample/avatars[14]" />

        <TextView
            android:id="@+id/animeTittle"
            style="@style/AnimeDetailHeaderTittle"
            android:layout_marginTop="10dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf = "@id/imgAnime"
            app:layout_constraintTop_toTopOf ="parent" />

        <TextView
            android:id="@+id/kindTV"
            style="@style/AnimeDetailHeaderTittle"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf = "@id/imgAnime"
            app:layout_constraintTop_toBottomOf = "@+id/animeTittle"
           />

        <TextView
            android:id="@+id/capitulostv"
            style="@style/AnimeDetailHeaderTittle"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf = "@id/imgAnime"
            app:layout_constraintTop_toBottomOf="@+id/kindTV"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>