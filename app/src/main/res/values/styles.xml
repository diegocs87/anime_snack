<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
    </style>


    <style name="AnimeDetailSectionTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AnimeDetailTittle" parent="AnimeDetailSectionTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">27sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AnimeDetailHeaderTittle" parent="AnimeDetailSectionTitle">
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="AnimeDetailSectionBody">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="AnimeDetailBigSectionBody">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AnimeDetailBody" parent="AnimeDetailSectionBody">
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/darkerGray</item>
    </style>

    <style name="AnimeDetailRankedSectionCard">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AnimeDetailSynopsisSectionBody" parent="AnimeDetailSectionBody">
        <item name="android:maxLines">3</item>
    </style>

    <style name="AnimeDetailRankSectionBody" parent="AnimeDetailBigSectionBody">
        <item name="android:maxLines">3</item>
    </style>
</resources>